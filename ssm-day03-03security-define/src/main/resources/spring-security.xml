<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:security="http://www.springframework.org/schema/security"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/security
       http://www.springframework.org/schema/security/spring-security.xsd">

    <!--配置用户   认证信息-->
    <security:authentication-manager id="authenticationManager">
        <security:authentication-provider user-service-ref="myUserDetailsService">
            <!--<security:user-service>-->
                <!--配置用户信息说明:
                    name:用户名称
                    password:用户密码,细节,指定加密的方式{noop}是不加密
                    authorities:角色列表
                    -->
                <!--&lt;!&ndash;<security:user name="user" password="{noop}user" authorities="ROLE_USER"/>
                <security:user name="admin" password="{noop}admin" &ndash;&gt;authorities="ROLE_ADMIN"/>
            </security:user-service>-->
        </security:authentication-provider>
    </security:authentication-manager>
    <!--配置自定义认证服务-->
    <bean id="myUserDetailsService" class="com.sune.security.service.MyUserDetailsService"/>

    <!--配置用户  授权信息
    auto-config:开启自动配置
    use-expressions:关闭SqEL表达式
    -->
    <security:http auto-config="true" use-expressions="false">
        <!--配置权限URL规则
        pattern:erl规则可以使用通配符*
        access:角色列表,细节默认情况下的名称必须是ROLE开头
        -->
       <!-- <security:intercept-url pattern="/welcome**" access="ROLE_USER"/>
        <security:intercept-url pattern="/admin**" access="ROLE_ADMIN"/>-->
        <!--配置自定义信息-->
        <security:custom-filter before="FILTER_SECURITY_INTERCEPTOR" ref="myFilter"/>

        <!--配置登录功能
        login-page:登录页面
        default-target-url:登录成功跳转的页面
        authentication-failure-forward-url:登录失败跳转到的页面
        细节:默认情况下的url必须shi/login
        2.默认请求的用户名称和密码必须是username,password
        3.通过login-proessing-url,修改默认的请求地址
        login-proessing-url="/mylogin"
        4.通过username-parameter和password-parameter修改默认的用户名名称和 密码
        -->
        <security:form-login
            login-page="/pages/login.jsp"
            default-target-url="/index.jsp"
            authentication-failure-forward-url="/pages/error.jsp"
        ></security:form-login>
        <!--退出说明配置
        logout-success-url:退出成功后的页面
        invalidate-session:是否销毁session
        -->
        <security:logout logout-success-url="/pages/login.jsp" invalidate-session="true"/>

        <!--配置关闭csrf请求伪造-->
        <security:csrf disabled="true"/>

    </security:http>
    <!-- 配置自定义授权过滤器，必须包含：
           1.authenticationManager
           2.accessDecisionManager
           3.securityMetadataSource
       3个属性。我们的所有控制将在这三个类中实现。
       -->
    <bean id="myFilter" class="com.sune.security.auth.MyFilterSecurityInterceptor">
        <!--认证管理器-->
        <property name="authenticationManager" ref="authenticationManager"/>
        <!--访问决策管理器-->
        <property name="accessDecisionManager" ref="myAccessDecisionManager"/>
        <!--资源数据定义-->
        <property name="securityMetadataSource" ref="mySecurityMetadataSource"/>


    </bean>
    <!--配置数据资源定义:获取资源的全部权限-->
    <bean id="mySecurityMetadataSource" class="com.sune.security.auth.MyInvocationSecurityMetadataSource"/>

    <!--配置决策访问决策器:决定某个用户是否有权限访问资源-->
    <bean id="myAccessDecisionManager" class="com.sune.security.auth.MyAccessDecisionManager"/>



</beans>